<%= page_title(title: "Outbound SIP Trunk") do %>
  <% if policy(@resource).edit? %>
    <%= render("shared/edit_resource_page_action", path: edit_dashboard_outbound_sip_trunk_path(@resource)) %>
  <% end %>
    <% if policy(@resource).destroy? %>
    <%= render("shared/destroy_resource_page_action", path: dashboard_outbound_sip_trunk_path(@resource)) %>
  <% end %>
<% end %>

<div class="card-body">
  <%= show_for(@resource) do |f| %>
    <%= f.attribute :name, value: @resource.name %>
    <%= f.attribute :example_dial_string, label: "Dial string" do %>
      <code>
        <%= @resource.example_dial_string %>
      </code>
    <% end %>
    <%= f.attribute :host %>
    <%= f.attribute :dial_string_prefix %>
    <%= f.attribute :trunk_prefix %>
    <%= f.attribute :created_at, value: local_time(@resource.created_at) %>
    <%= f.attribute :updated_at, value: local_time(@resource.updated_at) %>
  <% end %>
</div>
