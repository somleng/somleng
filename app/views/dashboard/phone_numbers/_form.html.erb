<div class="card-body">
  <%= simple_form_for([:dashboard, resource], wrapper: :input_group) do |f| %>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">General</h5>

        <div class="row">
          <div class="col-sm-6">
            <%=
              f.input(
                :number,
                required: true,
                disabled: resource.persisted?,
                hint: resource.new_record? && "Phone number in E.164 format or shortcode. e.g. +1 (234) 234-5678 or 732873"
              ) %>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Properties</h5>

        <div class="row">
          <div class="col-sm-6">
            <%=
              f.input(
                :type,
                prompt: "Please Select",
                required: true,
                collection: PhoneNumber.type.values.map { |t| [t.text, t] }
              )
            %>
          </div>

          <div class="col-sm-6">
            <%=
              f.input(
                :country,
                only: resource.possible_countries,
                include_blank: false,
                prompt: "Automatically select from phone number"
              )
            %>
          </div>

          <div class="col-sm-6">
            <%=
              f.input(
                :price,
                as: :decimal,
                prepend: resource.new_record? ? resource.carrier.billing_currency.symbol : resource.phone_number.currency.symbol,
                append: resource.new_record? ? resource.carrier.billing_currency.iso_code : resource.phone_number.currency.iso_code
              )
            %>
          </div>
        </div>
      </div>
    </div>

    <div class="card card border-danger mb-3">
      <div class="card-body">
        <h5 class="card-title">Danger Zone</h5>

        <div class="row">
          <div class="col-sm-6">
            <%= f.input :enabled, as: :boolean, wrapper: :custom_boolean_switch, hint: "Phone numbers which are disabled are blocked from being used by any accounts." %>
          </div>
        </div>
      </div>
    </div>

    <%= f.button :submit %>
  <% end %>
</div>
