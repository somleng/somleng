<table class="table table-bordered table-striped">
  <thead>
    <tr role="row">
      <th>
        Phone Number
      </th>
      <th>
        Country
      </th>
      <th>
        Type
      </th>
      <th>
        Visibility
      </th>
      <th>
        Price
      </th>
      <th>
        Assigned
      </th>
      <th>
        Created At
      </th>
    </tr>
  </thead>

  <tbody>
    <% resources.each do |phone_number| %>
      <% phone_number = phone_number.decorated %>
      <tr role="row" class="<%= cycle("odd", "even", name: "row_class") -%>">
        <td>
          <%= link_to(phone_number.number_formatted, dashboard_phone_number_path(phone_number)) %>
        </td>

        <td>
          <%= phone_number.country.emoji_flag %>
          <%= phone_number.country.iso_short_name %>
        </td>

        <td>
          <%= phone_number.type_formatted %>
        </td>

        <td>
          <%= phone_number.visibility_formatted %>
        </td>

        <td>
          <%= phone_number.price.format %>
        </td>

        <td>
          <%= phone_number.assigned? ? t("show_for.yes") : t("show_for.no") %>
        </td>

        <td>
          <%= local_time(phone_number.created_at) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
