<%= page_title(title: "Destination Tariff") do %>
  <% if policy(@resource).edit? %>
    <%= render("shared/edit_resource_page_action", path: edit_dashboard_tariff_schedule_destination_tariff_path(@resource.tariff_schedule, @resource)) %>
  <% end %>

  <% if policy(@resource).destroy? %>
    <%= render("shared/destroy_resource_page_action", path: dashboard_tariff_schedule_destination_tariff_path(@resource.tariff_schedule, @resource)) %>
  <% end %>
<% end %>

<div class="card-body">
  <%= show_for(@resource.decorated) do |f| %>
    <%= f.attribute :id, label: "SID" do %>
      <code>
        <%= f.object.id %>
      </code>
    <% end %>

    <%= f.attribute :tariff_schedule do %>
      <%= external_link_to(f.object.tariff_schedule_name, dashboard_tariff_schedule_path(f.object.tariff_schedule_id)) %>
    <% end %>

    <%= f.attribute :destination_tariff do %>
      <%= external_link_to(f.object.destination_group_name, dashboard_destination_group_path(f.object.destination_group_id)) %>
    <% end %>

    <%= f.attribute :diagram do %>
      <%= destination_tariff_diagram(f.object) %>
    <% end %>

    <%= f.attribute :created_at, value: local_time(@resource.created_at) %>
  <% end %>
</div>
