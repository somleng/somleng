<% plan = @resource.decorated %>

<%= page_title(title: "#{plan.friendly_name}") %>

<div class="card-body">

  <%= show_for(plan) do |f| %>
    <%= f.attribute :status do %>
      <%= status_badge(plan.status.text, color: plan.status_color) %>
    <% end %>

    <%= f.attribute :amount, label: "Monthly amount", value: plan.amount.format %>

    <% if policy(plan.incoming_phone_number).show? %>
      <%= f.association :incoming_phone_number do |incoming_phone_number| %>
        <%= external_link_to(incoming_phone_number.number_formatted, dashboard_incoming_phone_number_path(incoming_phone_number)) %>
      <% end %>
    <% end %>

    <% if policy(plan.phone_number).show? %>
      <%= f.association :phone_number do |phone_number| %>
        <%= external_link_to(phone_number.number_formatted, dashboard_phone_number_path(phone_number)) %>
      <% end %>
    <% end %>

    <% if policy(:account).show? %>
      <%= f.attribute :account do %>
        <%= external_link_to(plan.account.name, dashboard_account_path(plan.account)) %>
      <% end %>
    <% end %>

    <%= f.attribute :created_at, value: local_time(plan.created_at) %>

    <% if plan.canceled? %>
      <%= f.attribute :canceled_at, value: local_time(plan.canceled_at) %>
    <% end %>
  <% end %>
</div>
