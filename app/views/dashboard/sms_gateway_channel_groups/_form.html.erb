<div class="card-body">
  <%= simple_form_for([:dashboard, resource]) do |f| %>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :name, maxlength: 128, hint: "A friendly name for the channel group" %>
      </div>

      <div class="col-sm-6">
        <%= f.input(
            :sms_gateway_id,
            required: true,
            collection: resource.carrier.sms_gateways,
            selected: resource.sms_gateway_id || params.dig(:filter, :sms_gateway_id),
            prompt: "Please select",
            disabled: resource.persisted?,
            input_html: { data: { behavior: "choices-input" } },
            hint: "The SMS gateway to associate this channel group with."
          )
        %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input(
          :route_prefixes,
          as: :text,
          placeholder: "#{resource.carrier.country.country_code}15, #{resource.carrier.country.country_code}16",
          hint: "An optional comma seperated list of route prefixes. Must include the country code."
        ) %>
      </div>
    </div>

    <%= f.button :submit %>
  <% end %>
</div>
