<%= page_title(title: "Event") %>

<div class="card-body">
  <%= show_for(@resource) do |f| %>
    <%= f.attribute :id do %>
      <code>
        <%= @resource.id %>
      </code>
    <% end %>

    <%= f.attribute :type do %>
      <code>
        <%= @resource.type %>
      </code>
    <% end %>

    <%= f.attribute :webhook_logs, value: external_link_to("View", dashboard_webhook_request_logs_path(filter: {event_id: @resource.id}), title: "View webhook logs") %>

    <%= f.attribute :details do %>
      <pre><code><%= JSON.pretty_generate(@resource.details) %></code></pre>
    <% end %>

    <%= f.attribute :created_at, value: local_time(@resource.created_at) %>
  <% end %>
</div>
