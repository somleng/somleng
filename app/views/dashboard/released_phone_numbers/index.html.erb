<%= page_title(title: "Released Phone Numbers") do %>
  <%= render("shared/filters") do |form| %>
    <%= form.text_field_tag(:number, params.dig(:filter, :number)) %>

    <%= form.date_range title: "Released at", filter_value: [params.dig(:filter, :from_date), params.dig(:filter, :to_date)] %>
  <% end %>
<% end %>

<div class="card-body">
  <%= render "collection", resources: @resources %>

  <%= render "shared/pagination", resources: @resources %>
</div>
