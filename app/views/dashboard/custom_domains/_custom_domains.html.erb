<table class="table table-bordered table-striped">
  <thead>
    <tr role="row">
      <th>
        Record Type
      </th>
      <th>
        Host
      </th>
      <th>
        Value
      </th>
      <th>
        Status
      </th>
    </tr>
  </thead>

  <tbody>
    <% custom_domains.each do |custom_domain| %>
      <tr role="row" class="<%= cycle("odd", "even", name: "row_class") -%>" id="<%= custom_domain.host_type %>-domain-settings">
        <td>
          <%= custom_domain.dns_record_type.upcase %>
        </td>

        <td>
          <code>
            <% Array(custom_domain.record_name).each do |record_name| -%>
              <%= record_name %>
              <br/>
            <% end %>
          </code>
        </td>

        <td>
          <code>
            <% Array(custom_domain.record_value).each do |record_value| -%>
              <%= record_value %>
              <br/>
            <% end %>
          </code>
        </td>

        <td>
          <% if custom_domain.verified? %>
            <span class="text-success">Verified <i class="fas fa-check-circle" title="Verified at: <%= custom_domain.verified_at %>"></i></span>
          <% elsif custom_domain.is_a?(MailCustomDomain) && custom_domain.expired? %>
            <span class="text-danger">Expired <i class="fas fa-times-circle"></i></span>
            <p>
              <br />
              <span class="text-muted">Verification period has expired, you must restart the verification process.</span>
              <%= link_to regenerate_dashboard_carrier_settings_custom_domain_path, class: "btn btn-info btn-sm", method: :post, title: "Restart" do %>
                <i class="fas fa-redo"></i>
              <% end %>
            </p>

          <% else %>
            <span class="text-warning">Pending Verification <i class="fas fa-exclamation-circle text-warning"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
