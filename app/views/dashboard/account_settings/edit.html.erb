<%= page_title(title: "Edit Account Settings") %>

<div class="card-body">
  <%= simple_form_for(@resource, url: dashboard_account_settings_path, wrapper: :input_group) do |f| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">General</h5>

        <div class="row">
          <div class="col-sm-6">
            <%= f.input :name, maxlength: 128, hint: "A friendly name for your account" %>
          </div>
        </div>

      </div>
    </div>

    <div id="default-tts-configuration" class="card mb-3">
      <div class="card-body">
        <%= f.simple_fields_for(@resource.default_tts_configuration, wrapper: :input_group) do |tts_form| %>
          <h5 class="card-title">Text to speech</h5>

          <div class="row">
            <div class="col-sm-6">
              <%= tts_form.input :provider, include_blank: false %>
            </div>

            <div class="col-sm-6">
              <%= tts_form.input :language, include_blank: false, collection: DefaultTTSConfiguration.language.values %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= f.button :submit %>
  <% end %>
</div>
