<%= page_title(title: "TTS Event") %>

<div class="card-body">
  <%= show_for(@resource) do |f| %>
    <%= f.attribute :sid do %>
      <code><%= @resource.id %></code>
    <% end %>
    <%= f.attribute :voice do %>
      <code><%= @resource.tts_voice %></code>
    <% end %>
    <%= f.attribute :characters do %>
      <%= number_with_delimiter(@resource.num_chars) %>
    <% end %>
    <%= f.attribute :account do %>
      <%= external_link_to(@resource.account.name, dashboard_account_path(@resource.account_id)) %>
    <% end %>
    <%= f.attribute :phone_call do %>
      <%= external_link_to(@resource.phone_call_id, dashboard_phone_call_path(@resource.phone_call_id)) %>
    <% end %>

    <%= f.attribute :created_at, value: local_time(@resource.created_at) %>
  <% end %>
</div>
