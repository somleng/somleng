<div class="card-body">
  <%= simple_form_for([:dashboard, resource]) do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :name, placeholder: "Main SIP Trunk", maxlength: 128, hint: "A friendly name for the SIP Trunk" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :source_ip, placeholder: "175.100.7.240", hint: "The source IP address for inbound calls" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :trunk_prefix_replacement, placeholder: current_carrier.country.country_code, hint: "Only required if your inbound trunk is configured for local dialing. The leading 0 will be replaced by this value" %>
      </div>
    </div>

    <%= f.button :submit %>
  <% end %>
</div>
