<div class="card-body">
  <%= simple_form_for([:dashboard, resource], url: (dashboard_tariff_bundles_path(filter_params) if @resource.new_record?), wrapper: :input_group, html: { data: { controller: "tariff-bundle-form" } }) do |f| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          General
        </h5>

        <div class="row">
          <div class="col-sm-6">
            <%= f.input(:name) %>
          </div>

          <div class="col-sm-6">
            <%= f.input(:description, as: :text) %>
          </div>
        </div>
      </div>
    </div>

    <%= render(
      "shared/tariff_plan_assignment_form",
      form: f,
      collection: f.object.line_items,
      collection_method: :line_items
    ) %>

    <%= f.button :submit %>
    <%= link_to_cancel %>
  <% end %>
</div>
