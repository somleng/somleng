<% filter_params = request.query_parameters.fetch(:filter, {}).compact %>

<%= link_to(
  dashboard_exports_path(
    export: export_params.reverse_merge(filter_params: filter_params)
  ),
  method: :post,
  class: "btn btn-info",
  data: { confirm: ("You haven't selected any filters. Are you sure you still want to export all records?" if filter_params.blank?) },
  title: "Export"
  ) do %>
  <i class="fas fa-file-download"></i>
<% end %>
