<% content_for(:page_title) do %>
  <%= "Invite user to #{current_user.carrier.name}" %>
<% end %>

<div class="card-body">
  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :name, maxlength: 128 %>
      </div>

      <div class="col-sm-6">
        <%= f.input :email %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :carrier_role, label: "Role", hint: "Owner has full access. Admin can manage all resources except manage users. Member has read-only access" %>
      </div>
    </div>

    <%= f.button :submit, t("devise.invitations.new.submit_button") %>
  <% end %>
</div>
