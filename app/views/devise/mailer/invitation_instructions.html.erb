<p><%= t("devise.mailer.invitation_instructions.hello", email: @resource.name) %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url(host: @host)) %></p>

<a class="btn btn-primary p-3 fw-700 ax-center" href="<%= accept_invitation_url(@resource, invitation_token: @token, host: @host) %>">
   <%= t("devise.mailer.invitation_instructions.accept") %>
</a>

<% if @resource.invitation_due_at %>
  <p class="text-muted"><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p class="text-muted"><%= t("devise.mailer.invitation_instructions.ignore") %></p>
