<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title" id="page-title">
     Statistics for <%= @dashboard.filter %>
  </h1>

  <div style="float: right;" id="filters">
    <small>
      <% StatisticDashboard::FILTERS.first(8).each do |filter| %>
        <%= link_to(filter.name, url_for(action: :index, search: filter.name) )%>
      <% end %>
    </small>
  </div>
</header>

<section class="main-content__body main-content__body--flush">
  <p>
    <dl>
      <dt class="attribute-label">Interactions:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.interactions_count %></dd>

      <dt class="attribute-label">Beneficiaries:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.beneficiaries_count %></dd>

      <dt class="attribute-label">Beneficiary Countries:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.beneficiary_countries_count %></dd>

      <dt class="attribute-label">Beneficiary Countries:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.beneficiary_country_names %></dd>

      <dt class="attribute-label">Carriers:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.carriers_count %></dd>

      <dt class="attribute-label">Carrier Countries:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.carrier_countries_count %></dd>

      <dt class="attribute-label">Carrier Countries:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.carrier_country_names %></dd>

      <dt class="attribute-label">Accounts:</dt>
      <dd class="attribute-data attribute-data--string"><%= @dashboard.accounts_count %></dd>
    </dl>
  </p>
</div>
